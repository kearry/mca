# Environment variables for Content Atomizer
# Copy this file to .env and update the values as needed.

# SQLite database used by Prisma
DATABASE_URL="file:./dev.db"

# Path to browser-exported cookies for yt-dlp authentication
YTDLP_COOKIE_FILE=/path/to/cookies.txt

# yt-dlp format string
YTDLP_VIDEO_FORMAT="bestvideo[height<=720]+bestaudio/best[height<=720]"

# API key for Gemini
GOOGLE_API_KEY=your-google-api-key

# Path to a custom Whisper model (.pt or .gguf)
WHISPER_MODEL_PATH=/path/to/whisper-model

CLIP_PADDING=1.5           # Seconds of padding around clips
CONTEXT_PADDING=2.5      # Seconds of padding around context